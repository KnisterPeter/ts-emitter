{
  "name": "ts-emitter",
  "version": "0.4.0",
  "description": "Emitting typescript as back to typescript",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "start": "npm test -- --watch",
    "clean": "rimraf dist",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "test": "jest",
    "update-harness": "./test-harness/update.sh && ./test-harness/gen-specs.sh",
    "preharness": "npm run build",
    "harness": "jest --runInBand --coverage false --testRegex '.spec.js$'",
    "coverage": "codecov",
    "prerelease": "git checkout master && git pull origin master && npm test && npm run update-harness && npm run harness",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KnisterPeter/ts-emitter.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/common-tags": "1.8.0",
    "@types/jest": "25.2.1",
    "@types/node": "10.12.24",
    "codecov": "3.6.5",
    "common-tags": "1.8.0",
    "coveralls": "3.0.11",
    "globby": "11.0.0",
    "husky": "4.2.5",
    "iconv-lite": "0.5.1",
    "jest": "25.4.0",
    "rimraf": "3.0.2",
    "standard-version": "7.1.0",
    "ts-jest": "25.4.0",
    "tslint": "6.1.1",
    "typescript": "3.6.4"
  },
  "peerDependencies": {
    "typescript": "^2.6.1 || ^3.0.0"
  },
  "engines": {
    "node" : ">=10"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testURL": "http://localhost",
    "collectCoverage": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true,
      "automergeType": "branch"
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true,
        "automergeType": "branch"
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true,
        "automergeType": "branch"
      }
    ]
  },
  "husky": {
    "hooks": {}
  }
}
